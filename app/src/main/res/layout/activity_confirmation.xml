<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:text="@string/Confirm" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/txtConfirm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:id="@+id/btnYes"
            android:layout_below="@+id/btnNo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:layout_gravity="bottom"
            android:layout_weight="1.24"
            android:onClick="GoToNotificationOnClicked" />

        <Button
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="No"
            android:id="@+id/btnNo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:onClick="ReturnToHomeOnClicked"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>
</RelativeLayout>